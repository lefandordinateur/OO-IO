# vanilla include (the 'cxxtest' would be 'CxxTest' if the file was called CxxTest.py!)
env = Environment(tools = ['default', 'cxxtest'])

#build first simple runner
testList =  [
'DelegateBooleanParameter.t.h',
'Notifier.t.h',
]

sourceList =  [
'../Notifier.cpp',
]
env.CxxTest('ouptputTest/delegaterunner',testList + sourceList, CXXFLAGS='-Wall -W -Wextra')

#run tests
env.Command("pouet", None,"./ouptputTest/delegaterunner")